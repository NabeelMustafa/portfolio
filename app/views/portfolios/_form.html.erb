<%= form_for(portfolio_item) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle%>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div class="field">
    <%= f.label :main_image %>
    <%= f.file_field :main_image %>
  </div>

  <ul>
    <%= f.fields_for :technologies do |technology| %>
      <li><%= technology.label :name%></li>
      <li><%= technology.text_field :name%></li>
    <% end %>
  </ul>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>