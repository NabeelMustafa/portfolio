<%  if notice %>
  <div class="bon" id="app-growl">
    <div class="alert alert-dark alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <%= notice %>
    </div>
  </div>
<%  elsif alert%>
  <div class="bon" id="app-growl">
    <div class="alert alert-dark alert-dismissible fade show" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">×</span>
      </button>
      <%= alert %>
    </div>
  </div>
<% end %>





